<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each category.pois}}
      <tr>
        <td>{{name}}</td>
        <td>{{description}}</td>
        <td>{{latitude}}</td>
        <td>{{longitude}}</td>
        <td>
          <a href="/category/{{../category._id}}/delete-poi/{{_id}}" class="button">
          <i class="fas fa-trash"></i>&emsp;Delete POI
          </a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
